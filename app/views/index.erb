<!-- <h1>My Robots</h1> -->

<ul class = "collection container">

  <% @robots.each do |robot|%>
    <li class = "collection-item avatar center clearfix">
      <h3 class = "title"><a href='/robots/<%=robot.id%>'><%=robot.name%></a></h3>
      <img class= "circle" src="https://robohash.org/<%=robot.name%>">
      <p>City : <%= robot.city%></p>
      <p>State: <%= robot.state%></p>
      <p>Department: <%= robot.department%></p>
      <div class="btn-floating indigo lighten-1">
        <a href='/robots/<%=robot.id%>/edit'><span class="white-text">Edit</span></a>
      </div>
      <form action='/robots/<%=robot.id%>' method= "POST">
        <input type="hidden" name="_method" value="DELETE" />
        <input class= "btn pink darken-2 right" type="submit" value="Delete" />
      </form>
    </li>
  <%end%>
</ul>
